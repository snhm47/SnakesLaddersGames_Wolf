<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>


<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="1000.0" minWidth="1920.0" prefHeight="1000.0"
	prefWidth="1920.0" xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="Controller.EditQuestionController">
	<ImageView fx:id="imgBackg" fitHeight="1080" fitWidth="1920"
		opacity="0.87" pickOnBounds="true" />

	<children>
		<Label fx:id="selectedQuestionLabel" text="Selected Question:"
			style="-fx-font-size: 30px; -fx-font-weight: bold;" layoutX="350.0"
			layoutY="340.0" />
		<TextArea fx:id="modifiedQuestionTextArea" prefHeight="150.0"
			prefWidth="700.0"
			style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;"
			layoutX="633.0" layoutY="450.0" />
		<Button layoutX="833.0" layoutY="700.0" mnemonicParsing="false"
			onAction="#saveQuestion" text="Save"
			style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF; -fx-background-color: #000000;"
			prefWidth="140.0" />
		<Button layoutX="993.0" layoutY="700.0" mnemonicParsing="false"
			onAction="#cancelEdit" text="Cancel"
			style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF; -fx-background-color: #000000;"
			prefWidth="140.0" />
	</children>

	<ImageView fx:id="titleImg" fitHeight="150.0"
		fitWidth="400.0" layoutX="883.0" layoutY="65.0" pickOnBounds="true"
		preserveRatio="true" />

</AnchorPane>

